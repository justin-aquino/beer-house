<h2>Showing Details for: <%= beer[0].name  %> </h2>

<div>
    <h3><%= beer[0].name %></h3>
    <img src="<%= beer[0].image_url %> " alt="<%= beer[0].name %> ">
    <p><%= beer[0].description %></p>
    <p><%= beer[0].brewers_tips %></p>
    <p><%= beer[0].ingredients.yeast %></p>
     
    <form method="POST" action="/users/tracker">
        <input  type="hidden" name="name" value="<%= beer[0].name %>">
        <input  type="hidden" name="yeast_type" value="<%= beer[0].ingredients.yeast %>">
        <input type="hidden" name="userId" value="<%= user.id %>">
        <input type="hidden" name="description" value="<%= beer[0].description %>" />
        <button class="btn btn-primary" type="submit">Add to Tracker</button>
      </form>
</div>