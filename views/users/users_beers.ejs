<% if (beers[0]) { %>
  <% beers.forEach(beer => { %>
    
    <div class="card text-white bg-gray m-auto mt-5" style="max-width: 50rem;">
      
      <div class="card-header font-weight-bold bg-dark ">
        <a class="text-decoration-none"href="/users/tracker/<%= beer.name %>"> <h4><%= beer.name %></h4> </a>
      </div>
      
      <div class="card-body">
        <p class="card-text">Yeast: <%= beer.yeast_type%></p>
        <p class="card-text"><%= beer.description%></p>
        <div class="d-inline">
          <a href="/users/tracker/edit/<%= beer.id %>"><button class="btn btn-warning">Edit</button></a>
          <form class="d-inline" method="POST" action="/users/tracker/<%= beer.name %>/?_method=DELETE">
            <input class="btn btn-danger" type="submit" value="Delete">
          </form>
        </div>
      </div>
    </div>
  <% }) %>
<% } else {%>
      <h1>No beers tracked!</h1>
<% } %> 
